# Soccer Discord Bot - Environment Configuration Example
# Copy this file to .env and fill in your actual values

# Required Configuration
DISCORD_BOT_TOKEN=your_discord_bot_token_here

# Optional Soccer MCP Configuration
SOCCER_MCP_URL=https://soccermcp-production.up.railway.app/mcp
AUTH_KEY=your_auth_key_here

# Optional Custom League Configuration (JSON format)
# SOCCER_LEAGUES_CONFIG={"EPL":{"active":true,"color":16711680},"CUSTOM":{"id":999,"name":"Custom League","country":"Test","priority":10,"active":true}}

# Optional Feature Flags (uncomment to override defaults)
# ENABLE_SOCCER_INTEGRATION=true
# ENABLE_H2H_ANALYSIS=true
# ENABLE_BETTING_RECOMMENDATIONS=true
# ENABLE_LEAGUE_STANDINGS=true

# Optional Rate Limiting (uncomment to override defaults)
# SOCCER_RATE_LIMIT_PER_MINUTE=30
# SOCCER_RATE_LIMIT_PER_HOUR=1800
# SOCCER_BURST_LIMIT=10

# Optional Channel Configuration
# SOCCER_CHANNEL_RETENTION_DAYS=3
# SOCCER_MAX_MATCHES_PER_DAY=50