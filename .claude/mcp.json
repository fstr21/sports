{
  "mcpServers": {
    "rest-api": {
      "command": "npx",
      "args": ["-y", "dkmaker-mcp-rest-api"],
      "env": {
        "REST_BASE_URL": "http://site.api.espn.com",
        "HEADER_Accept": "application/json",
        "HEADER_User-Agent": "ESPN-Research/1.0",
        "REST_ENABLE_SSL_VERIFY": "true",
        "REST_RESPONSE_SIZE_LIMIT": "10000"
      },
      "disabled": false,
      "autoApprove": ["test_request", "make_request"]
    }
  }
}