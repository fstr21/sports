# Discord Sports Bot Configuration Example
# Copy this file to .env and fill in your values

# Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_SYNC_PERMISSIONS=manage_channels
DISCORD_ACTIVITY_NAME=Sports Analysis
DISCORD_ACTIVITY_TYPE=watching

# Soccer Configuration
SOCCER_MCP_URL=https://soccermcp-production.up.railway.app/mcp
SOCCER_CATEGORY_NAME=SOCCER GAMES
SOCCER_CATEGORY_ID=1407474278374576178
SOCCER_EMBED_COLOR=0x00ff00
SOCCER_DATE_FORMAT=%d-%m-%Y
SOCCER_DEFAULT_LEAGUE_ID=297
SOCCER_MAX_CHANNELS=20
SOCCER_CHANNEL_DELAY=1.0

# MLB Configuration
MLB_MCP_URL=https://mlbmcp-production.up.railway.app/mcp
MLB_CATEGORY_NAME=MLB GAMES
MLB_EMBED_COLOR=0x0066cc
MLB_DATE_FORMAT=%Y-%m-%d
MLB_MAX_CHANNELS=20
MLB_CHANNEL_DELAY=1.0

